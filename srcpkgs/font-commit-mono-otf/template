# Template file for 'font-commit-mono-otf'
pkgname=font-commit-mono-otf
version=1.143
revision=1
short_desc="Anonymous and neutral programming typeface"
maintainer="tranzystorekk <tranzystorek.io@protonmail.com>"
license="OFL-1.1"
homepage="https://commitmono.com"
changelog="https://github.com/eigilnikolajsen/commit-mono/releases"
distfiles="https://github.com/eigilnikolajsen/commit-mono/releases/download/v${version}/CommitMono-${version}.zip"
checksum=f7d1f26a7c7554800a996f76f5d706bf0648b936ca2a66b5bc4d46e3a2c49ed0
provides="font:monospace-0_1"
font_dirs="/usr/share/fonts/OTF"

do_install() {
	vmkdir usr/share/fonts/OTF
	vmkdir usr/share/fonts/TTF

	vcopy *.otf usr/share/fonts/OTF
	vcopy ttfautohint/*.ttf usr/share/fonts/TTF
}

font-commit-mono-ttf_package() {
	font_dirs="/usr/share/fonts/TTF"
	pkg_install() {
		vmove usr/share/fonts/TTF
	}
}
